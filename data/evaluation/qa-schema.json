{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VOLaM-RAG Q/A Dataset Schema",
  "description": "Schema for evaluation questions and answers with citations and rubrics",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Dataset version"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "description": {
          "type": "string",
          "description": "Dataset description"
        },
        "totalQuestions": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of questions"
        },
        "domainDistribution": {
          "type": "object",
          "properties": {
            "hotel": {
              "type": "integer",
              "minimum": 0
            },
            "web-dev": {
              "type": "integer",
              "minimum": 0
            },
            "null-not-null": {
              "type": "integer",
              "minimum": 0
            }
          },
          "required": ["hotel", "web-dev", "null-not-null"]
        }
      },
      "required": ["version", "created", "totalQuestions", "domainDistribution"]
    },
    "questions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/QAItem"
      }
    }
  },
  "required": ["metadata", "questions"],
  "definitions": {
    "QAItem": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^(hotel|web-dev|nn)-\\d{3}$",
          "description": "Unique identifier (e.g., hotel-001, web-dev-001, nn-001)"
        },
        "domain": {
          "type": "string",
          "enum": ["hotel", "web-dev", "null-not-null"],
          "description": "Domain category"
        },
        "question": {
          "type": "string",
          "minLength": 10,
          "description": "The question text"
        },
        "expectedAnswer": {
          "type": "string",
          "minLength": 20,
          "description": "Expected answer text"
        },
        "citations": {
          "type": "array",
          "minItems": 1,
          "maxItems": 3,
          "items": {
            "$ref": "#/definitions/Citation"
          },
          "description": "1-3 citations supporting the answer"
        },
        "rubric": {
          "$ref": "#/definitions/Rubric"
        }
      },
      "required": ["id", "domain", "question", "expectedAnswer", "citations", "rubric"]
    },
    "Citation": {
      "type": "object",
      "properties": {
        "sourceFile": {
          "type": "string",
          "description": "Source file path relative to corpus root"
        },
        "relevantText": {
          "type": "string",
          "minLength": 50,
          "description": "Relevant text excerpt from the source"
        },
        "context": {
          "type": "string",
          "description": "Additional context about why this citation is relevant"
        }
      },
      "required": ["sourceFile", "relevantText"]
    },
    "Rubric": {
      "type": "object",
      "properties": {
        "fullCredit": {
          "type": "object",
          "properties": {
            "score": {
              "type": "number",
              "enum": [1.0]
            },
            "keywords": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Keywords/phrases that indicate full understanding"
            },
            "concepts": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Key concepts that must be present"
            }
          },
          "required": ["score", "keywords", "concepts"]
        },
        "partialCredit": {
          "type": "object",
          "properties": {
            "score": {
              "type": "number",
              "enum": [0.5]
            },
            "keywords": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Keywords/phrases that indicate partial understanding"
            },
            "concepts": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Concepts that indicate partial credit"
            }
          },
          "required": ["score", "keywords", "concepts"]
        },
        "noCredit": {
          "type": "object",
          "properties": {
            "score": {
              "type": "number",
              "enum": [0.0]
            },
            "description": {
              "type": "string",
              "description": "What constitutes no credit"
            }
          },
          "required": ["score", "description"]
        }
      },
      "required": ["fullCredit", "partialCredit", "noCredit"]
    }
  }
}
